{
  "manifest_version": 3,
  "name": "YouTube Activity Spoofer",
  "version": "1.0",
  "permissions": [
    "scripting",
    "tabs",
    "activeTab",
    "webNavigation",
    "storage"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://*.google.com/*", // Add this line to allow access to Google
    "*://*/*" // If you want to allow access to all hosts (not recommended for general use)
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
