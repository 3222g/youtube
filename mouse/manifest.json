{
  "manifest_version": 3,
  "name": "Random Hover Extension",
  "version": "1.0",
  "description": "Randomly hovers over elements on the page.",
  "permissions": ["activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
