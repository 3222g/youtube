{
    "manifest_version": 3,
    "name": "Always On Timezone, Geolocation, and Locale Changer",
    "version": "1.0.0",
    "description": "Automatically changes timezone, geolocation, and locale.",
    "permissions": [
        "storage",
        "debugger",
        "tabs",
        "activeTab",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "128": "icon128.png"
    },
    "host_permissions": [
        "<all_urls>"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ]
}
